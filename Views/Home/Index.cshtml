@model List<TodoApp.Models.TodoItems>

@{
    ViewData["Title"] = "Todo List";
}

<h1 class="mt-3 mb-3">Todo List</h1>

<a class="btn btn-primary mb-2" asp-controller="Home" asp-action="Create">+ Add New</a>
<a class="btn btn-danger mb-2" asp-controller="Home" asp-action="DeleteAll">Delete All</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Completed</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@(item.Completed ? "YES" : "NO")</td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>
                    <a class="btn btn-sm btn-warning"
                       asp-controller="Home"
                       asp-action="Edit"
                       asp-route-id="@item.Id">Edit</a>

                    <a class="btn btn-sm btn-danger"
                       asp-controller="Home"
                       asp-action="Delete"
                       asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
